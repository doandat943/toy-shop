# Cấu hình ứng dụng
NODE_ENV=development
PORT=5000
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=30d

# Cấu hình cơ sở dữ liệu
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=toy_shop_db
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_database_password

# Stripe API keys
# Lấy từ Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Cấu hình GHN API (Giao Hàng Nhanh)
# Lấy từ GHN Dashboard: https://khachhang.ghn.vn/
GHN_TOKEN=your_ghn_token
GHN_SHOP_ID=your_ghn_shop_id
# Môi trường: 'dev' hoặc 'prod'
GHN_ENV=dev

# Cấu hình MoMo Payment API
# Lấy từ MoMo Developer Portal: https://business.momo.vn/
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
# Môi trường: 'dev' hoặc 'prod'
MOMO_ENV=dev
MOMO_REDIRECT_URL=http://localhost:3000/order/status
MOMO_IPN_URL=http://localhost:5000/api/payment/momo-ipn 